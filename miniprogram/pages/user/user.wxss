/* miniprogram/pages/user/user.wxss */

page {
    background: linear-gradient(#1296db, #ffffff);
    padding: 70rpx 30rpx;
    width: auto
}

.join-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 150px
}

.join-btn {
    width: 200px;
    height: 200px;
    border-radius: 100px;
    line-height: 160px;
    font-size: 24px;
    font-weight: bold;
    background: url('https://616c-alice-dc9701-1258866920.tcb.qcloud.la/projectState/images/logo.jpg?sign=e9109805ba3cb65fbf1c0a1779d17f2c&t=1565415170');
    background-size: 100% 100%;
    box-shadow: 10px 10px 5px #888888;
}

.userinfo {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 40px
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    border: 2px solid white
}

.userinfo-nickname {
    color: #000000;
}

.user-logo {
    display: flex;
    align-items: center
}

.user-logo text {
    margin-left: 20px
}

.set-icon {
    font-size: 20px;
}

.user-form {
    height: 90px;
    border-radius: 5px;
    margin-top: 40px;
    background: white;
    display: flex;
    align-items: center;
    justify-content: space-between
}

.form-item {
    width: 30%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 14px
}

.form-item image {
    width: 28px;
    height: 28px;
    margin-bottom: 6px
}

.group {
    border-radius: 5px;
    margin-top: 20px;
    overflow: hidden;
}